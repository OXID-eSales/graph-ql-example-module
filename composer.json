{
  "name": "oxid-esales/graphql-example",
  "description": "OXID GraphQL Example",
  "type": "oxideshop-module",
  "keywords": ["oxid", "modules", "eShop", "GraphQL"],
  "homepage": "https://www.oxid-esales.com",
  "license": "GPL-3.0",
  "extra": {
    "oxideshop": {
      "target-directory": "oe/graphql-example",
      "blacklist-filter": [
        "src/**/*.php",
        "tests/**/*.php"
      ]
    }
  },
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "~6",
    "friendsofphp/php-cs-fixer": "^2",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "phpstan/phpstan": "^0.11"
  },
  "autoload": {
    "psr-4": {
      "OxidEsales\\GraphQL\\Sample\\": "src",
      "OxidEsales\\GraphQL\\Sample\\Tests\\": "tests"
    }
  },
  "scripts": {
    "lint": "php-cs-fixer fix -v",
    "test:lint": "php-cs-fixer fix -v --dry-run",
    "test:syntax": "parallel-lint src/",
    "test:static": "phpstan analyse src/",
    "test": [
        "@test:lint",
        "@test:syntax",
        "@test:static"
    ]
  }
}
